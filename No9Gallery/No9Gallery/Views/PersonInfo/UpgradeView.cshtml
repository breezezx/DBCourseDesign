@{
    ViewData["Title"] = "UpgradeLevel";
}

<style>

    .level {
        color: deeppink;
        font-size: 96px;
        font-weight: 500;
        font-family: 'Google Sans';
        background-color: rgba(0,0,0,0);
    }
</style>


<div>
    <img src="~/Image/PersonView/Membership.png" style="position:absolute; left:300px; top:60px"/>
    <span style="position: absolute; top: 120px; left: 540px;" class="level">Lv.@ViewData["MembershipLevel"]</span>
</div>

<div id="upgrade">
    <a asp-controller="PersonInfo" asp-action="Upgrade" asp-route-id="@ViewData["ID"]" asp-route-Level="@ViewData["MembershipLevel"]" asp-route-points="@ViewData["Points"]">
        <img src="~/Image/PersonView/UpgradeButton.png" style="position:absolute; left:300px; top: 330px" />
    </a>
    
    
    @if (Convert.ToBoolean(ViewData["Flag"]))
    {
        if ((@ViewData["result"].ToString()) == "true")
        {
            <div class="text-danger" style="position:absolute; left:300px; top: 390px">
                Success!
            </div>
        }
        else if ((ViewData["result"].ToString()) == "limitlevel")
        {
            <div class="text-danger" style="position:absolute; left:300px; top: 390px">
                您已升至最高会员等级!
            </div>
        }
        else if ((ViewData["result"].ToString()) == "false")
        {
            <div class="text-danger" style="position:absolute; left:300px; top: 390px">
                积分余额不足!
            </div>
        }
    } 

</div>
